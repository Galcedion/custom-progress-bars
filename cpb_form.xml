<?xml version="1.0" encoding="utf-8"?>
<form>
	<field
		name="cpb_enabled"
		type="radio"
		default="1"
		label="MOD_CPB_ENABLED_LABEL"
		layout="joomla.form.field.radio.switcher">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_class"
		type="text"
		label="MOD_CPB_BAR_CLASS_LABEL"
		description="MOD_CPB_BAR_CLASS_DESC"/>
	<field
		name="cpb_lang_force"
		type="radio"
		default="0"
		label="MOD_CPB_LANG_FORCE_LABEL"
		layout="joomla.form.field.radio.switcher"
		description="MOD_CPB_LANG_FORCE_DESC">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_lang_sub"
		type="subform"
		label="MOD_CPB_LANG_FORM_LABEL"
		multiple="true">
		<form>
			<field
				name="cpb_lang_sub_lang"
				type="contentlanguage"
				label="MOD_CPB_LANG_FORM_LANG_LABEL"
				description="MOD_CPB_LANG_FORM_LANG_DESC"/>
			<field
				name="cpb_lang_sub_title"
				type="text"
				label="MOD_CPB_TITLE_LABEL"/>
			<field
				name="cpb_lang_sub_progress_label"
				type="text"
				label="MOD_CPB_PROGRESS_UNIT_LABEL"/>
		</form>
	</field>
	<field
		name="cpb_s_main_title"
		type="spacer"
		label="MOD_CPB_S_MAIN_TITLE_LABEL"/>
	<field
		name="cpb_title_show"
		type="radio"
		default="1"
		label="MOD_CPB_TITLE_SHOW_LABEL"
		layout="joomla.form.field.radio.switcher">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_title"
		type="text"
		label="MOD_CPB_TITLE_LABEL"/>
	<field
		name="cpb_title_position"
		type="list"
		default="0"
		label="MOD_CPB_TITLE_POSITION_LABEL"
		description="MOD_CPB_TITLE_POSITION_DESC">
		<option value="0">MOD_CPB_DEFAULT</option>
		<option value="1">MOD_CPB_POSITION_INSIDE</option>
		<option value="2">MOD_CPB_POSITION_ABOVE</option>
		<option value="3">MOD_CPB_POSITION_BELOW</option>
		<option value="4">MOD_CPB_POSITION_LEFT</option>
		<option value="5">MOD_CPB_POSITION_RIGHT</option>
	</field>
	<field
		name="cpb_s_title_progress"
		type="spacer"
		label="MOD_CPB_S_TITLE_PROGRESS_LABEL"/>
	<field
		name="cpb_progress_show"
		type="radio"
		default="1"
		label="MOD_CPB_PROGRESS_SHOW_LABEL"
		layout="joomla.form.field.radio.switcher">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_progress_position"
		type="list"
		default="0"
		label="MOD_CPB_PROGRESS_POSITION_LABEL"
		description="MOD_CPB_PROGRESS_POSITION_DESC">
		<option value="0">MOD_CPB_DEFAULT</option>
		<option value="1">MOD_CPB_POSITION_INSIDE</option>
		<option value="2">MOD_CPB_POSITION_ABOVE</option>
		<option value="3">MOD_CPB_POSITION_BELOW</option>
		<option value="4">MOD_CPB_POSITION_LEFT</option>
		<option value="5">MOD_CPB_POSITION_RIGHT</option>
	</field>
	<field
		name="cpb_progress_min"
		type="number"
		label="MOD_CPB_CUR_PROGRESS_LABEL"
		default="0"
		step="1"/>
	<field
		name="cpb_progress_max"
		type="number"
		label="MOD_CPB_MAX_PROGRESS_LABEL"
		default="100"
		step="1"/>
	<field
		name="cpb_progress_percent"
		type="radio"
		default="1"
		label="MOD_CPB_PROGRESS_PERCENT_LABEL"
		layout="joomla.form.field.radio.switcher">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_progress_label"
		type="text"
		label="MOD_CPB_PROGRESS_UNIT_LABEL"
		default=""
		description="MOD_CPB_PROGRESS_LABEL_DESC"/>
	<field
		name="cpb_s_progress_overwrite"
		type="spacer"
		label="MOD_CPB_S_PROGRESS_OVERWRITE_LABEL"/>
	<field
		name="cpb_mouseover"
		type="list"
		default="0"
		label="MOD_CPB_MOUSEOVER_LABEL"
		description="MOD_CPB_MOUSEOVER_DESC">
		<option value="0">MOD_CPB_DEFAULT</option>
		<option value="1">MOD_CPB_MOUSEOVER_NONE</option>
		<option value="2">MOD_CPB_MOUSEOVER_TITLE</option>
		<option value="3">MOD_CPB_MOUSEOVER_PROGRESS</option>
		<option value="4">MOD_CPB_MOUSEOVER_PROGRESS_NOL</option>
	</field>
	<field
		name="cpb_custom_colors"
		type="subform"
		label="MOD_CPB_CUSTOM_COLORS_LABEL"
		description="MOD_CPB_CUSTOM_COLORS_DESC"
		multiple="true"
		min="0"
		max="1"
		buttons="add,remove">
		<form>
			<field
				name="cpb_color_text_inherit"
				type="radio"
				default="1"
				label="MOD_CPB_COLOR_INHERIT_LABEL"
				layout="joomla.form.field.radio.switcher">
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>
			<field
				name="cpb_color_text"
				type="color"
				default="#000000"
				format="rgb"
				label="MOD_CPB_COLOR_TEXT_LABEL"/>
			<field
				name="cpb_color_bg"
				type="color"
				default="#FFFFFF00"
				format="rgba"
				label="MOD_CPB_COLOR_BG_LABEL"/>
			<field
				name="cpb_color_border"
				type="color"
				default="#777777"
				format="rgba"
				label="MOD_CPB_COLOR_BORDER_LABEL"/>
			<field
				name="cpb_color_filled"
				type="color"
				default="#66CC66"
				format="rgba"
				label="MOD_CPB_COLOR_FILLED_LABEL"/>
			<field
				name="cpb_color_empty"
				type="color"
				default="#FF4D4D"
				format="rgba"
				label="MOD_CPB_COLOR_EMPTY_LABEL"/>
		</form>
	</field>
	<field
		name="cpb_gradient"
		type="list"
		default="0"
		label="MOD_CPB_GRADIENT_LABEL"
		description="MOD_CPB_GRADIENT_DESC">
		<option value="0">MOD_CPB_DEFAULT</option>
		<option value="1">MOD_CPB_GRADIENT_FILLED</option>
		<option value="2">MOD_CPB_GRADIENT_EMPTY</option>
		<option value="3">MOD_CPB_GRADIENT_MIX</option>
		<option value="4">MOD_CPB_GRADIENT_LINEAR</option>
	</field>
	<field
		name="cpb_style"
		type="list"
		default="0"
		label="MOD_CPB_STYLE_LABEL"
		description="MOD_CPB_STYLE_DESC">
		<option value="0">MOD_CPB_DEFAULT</option>
		<option value="1">MOD_CPB_STYLE_ROUNDED</option>
		<option value="2">MOD_CPB_STYLE_EDGES</option>
		<option value="3">MOD_CPB_STYLE_CIRCLE</option>
		<option value="4">MOD_CPB_STYLE_TL</option>
		<option value="5">MOD_CPB_STYLE_TR</option>
	</field>
</form>