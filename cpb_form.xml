<?xml version="1.0" encoding="utf-8"?>
<form>
	<field
		name="cpb_enabled"
		type="radio"
		default="1"
		label="Show this progress bar?"
		layout="joomla.form.field.radio.switcher">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_class"
		type="text"
		label="Progress bar class"
		description="Extra individual class for the progress bar"/>
	<field
		name="cpb_lang_force"
		type="radio"
		default="0"
		label="Force alternative languages?"
		layout="joomla.form.field.radio.switcher"
		description="When enabled, only languages specified in alternative languages will see this progress bar.">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_lang_sub"
		type="subform"
		label="Alternative languages"
		multiple="true">
		<form>
			<field
				name="cpb_lang_sub_lang"
				type="contentlanguage"
				label="Title language"
				description="The alternatives will be applied to all users that use the selected language."/>
			<field
				name="cpb_lang_sub_title"
				type="text"
				label="Title"/>
			<field
				name="cpb_lang_sub_progress_label"
				type="text"
				label="Progress unit"/>
		</form>
	</field>
	<field
		name="cpb_s_main_title"
		type="spacer"
		label="&lt;hr/&gt;Title settings"/>
	<field
		name="cpb_title_show"
		type="radio"
		default="1"
		label="Display title"
		layout="joomla.form.field.radio.switcher">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_title"
		type="text"
		label="Title"/>
	<field
		name="cpb_title_position"
		type="list"
		default="0"
		label="Title position"
		description="Position of the title in relation to the progress bar">
		<option value="0">Default</option>
		<option value="1">Inside</option>
		<option value="2">Above</option>
		<option value="3">Below</option>
		<option value="4">Left</option>
		<option value="5">Right</option>
	</field>
	<field
		name="cpb_s_title_progress"
		type="spacer"
		label="&lt;hr/&gt;Progress settings"/>
	<field
		name="cpb_progress_show"
		type="radio"
		default="1"
		label="Display progress (text)"
		layout="joomla.form.field.radio.switcher">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_progress_position"
		type="list"
		default="0"
		label="Progress position"
		description="Position of the progress text in relation to the progress bar">
		<option value="0">Default</option>
		<option value="1">Inside</option>
		<option value="2">Above</option>
		<option value="3">Below</option>
		<option value="4">Left</option>
		<option value="5">Right</option>
	</field>
	<field
		name="cpb_progress_min"
		type="number"
		label="Current Progress"
		default="0"
		step="1"/>
	<field
		name="cpb_progress_max"
		type="number"
		label="Maximum Progress"
		default="100"
		step="1"/>
	<field
		name="cpb_progress_percent"
		type="radio"
		default="1"
		label="Progress as percent?"
		layout="joomla.form.field.radio.switcher">
		<option value="0">JNo</option>
		<option value="1">JYes</option>
	</field>
	<field
		name="cpb_progress_label"
		type="text"
		label="Progress unit"
		default=""
		description="Alternative label for the progress. Can be empty. Will not be applied, when progress is displayed as percentage."/>
	<field
		name="cpb_s_progress_overwrite"
		type="spacer"
		label="&lt;hr/&gt;Overwrite defaults"/>
	<field
		name="cpb_mouseover"
		type="list"
		default="0"
		label="Mouseover effect (tooltip)"
		description="Content for the tooltip, when hovering over the progress bar">
		<option value="0">Default</option>
		<option value="1">None</option>
		<option value="2">Show title</option>
		<option value="3">Show progress</option>
		<option value="4">Show progress (no label)</option>
	</field>
	<field
		name="cpb_custom_colors"
		type="subform"
		label="Custom colors"
		description="If enabled, individual colors can be set for each progress bar. Otherwise the default is used."
		multiple="true"
		min="0"
		max="1"
		buttons="add,remove">
		<form>
			<field
				name="cpb_color_text_inherit"
				type="radio"
				default="1"
				label="Inherit the text color from the Template?"
				layout="joomla.form.field.radio.switcher">
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>
			<field
				name="cpb_color_text"
				type="color"
				default="#000000"
				format="rgb"
				label="Text color"/>
			<field
				name="cpb_color_bg"
				type="color"
				default="#FFFFFF00"
				format="rgba"
				label="Progress bar background color"/>
			<field
				name="cpb_color_border"
				type="color"
				default="#777777"
				format="rgba"
				label="Progress bar border color"/>
			<field
				name="cpb_color_filled"
				type="color"
				default="#66CC66"
				format="rgba"
				label="Progress bar filled color"/>
			<field
				name="cpb_color_empty"
				type="color"
				default="#FF4D4D"
				format="rgba"
				label="Progress bar empty color"/>
		</form>
	</field>
	<field
		name="cpb_gradient"
		type="list"
		default="0"
		label="Progress gradient">
		<option value="0">Default</option>
		<option value="1">Only Filled color</option>
		<option value="2">Only Empty color</option>
		<option value="3">Mixed color (by progress)</option>
		<option value="4">Linear Gradient (current progress)</option>
	</field>
	<field
		name="cpb_style"
		type="list"
		default="0"
		label="Progress bar style">
		<option value="0">Default</option>
		<option value="1">Rounded</option>
		<option value="2">Edges</option>
		<option value="3">Circle</option>
		<option value="4">Tilt left</option>
		<option value="5">Tilt right</option>
	</field>
</form>